<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="myName"
                type="com.example.parking.Car" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/license_plate_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            style="@style/NameStyle"
            android:layout_marginEnd="@dimen/layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/layout_margin"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="@dimen/layout_padding"
            app:layout_constraintTop_toBottomOf="@+id/parking2_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/brand_edit"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto"
            android:hint="@string/license_plate"
            android:layout_marginBottom="@dimen/layout_margin"/>
    <TextView
            android:id="@+id/license_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            style="@style/NameStyle"
            app:layout_constraintHorizontal_bias="0.5"
            android:paddingTop="@dimen/layout_padding"
            android:paddingBottom="@dimen/small_padding"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/parking2_text"
            app:layout_constraintBottom_toTopOf="@+id/brand_text"
            android:layout_marginTop="16dp"/>
    <EditText
            android:id="@+id/brand_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            style="@style/NameStyle"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/license_plate_edit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/name_driver_edit"
            android:fontFamily="@font/roboto"
            android:hint="@string/brand"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin" android:paddingTop="@dimen/layout_padding"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/brand_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textAlignment="center" style="@style/NameStyle"
            android:paddingTop="@dimen/layout_padding" android:paddingBottom="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@+id/license_text" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/name_driver_text" android:visibility="gone"/>
    <EditText
            android:id="@+id/name_driver_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textAlignment="center"
            style="@style/NameStyle"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brand_edit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/cancel_button"
            android:fontFamily="@font/roboto"
            android:hint="@string/name_driver"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin" android:paddingTop="@dimen/layout_padding"
            android:paddingBottom="@dimen/small_padding"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/name_driver_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textAlignment="center" style="@style/NameStyle"
            android:paddingTop="@dimen/layout_padding" android:paddingBottom="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@+id/brand_text" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/update_button" android:visibility="gone"/>
    <Button
            android:id="@+id/update_button"
            android:text="@string/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toBottomOf="@+id/name_driver_edit"
            android:layout_marginStart="@dimen/layout_padding"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/cancel_button"
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            app:layout_constraintBaseline_toBaselineOf="@+id/update_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/layout_padding"/>
    <TextView
            android:id="@+id/parking1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/parking2_text"
            app:layout_constraintBaseline_toBaselineOf="@+id/parking2_text"
            style="@style/NameStyle"
            android:paddingTop="@dimen/layout_padding"
            android:paddingBottom="@dimen/layout_padding"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#CE59D343"
            android:text="ว่าง"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/parking2_text" android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/parking1_text" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/parking3_text"
            style="@style/NameStyle"
            android:paddingTop="@dimen/layout_padding" android:paddingBottom="@dimen/layout_padding"
            android:layout_marginTop="@dimen/layout_margin" app:layout_constraintTop_toBottomOf="@+id/car_parking_text"
            android:textAlignment="center" android:background="#CE59D343" android:text="ว่าง"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/parking3_text" android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/parking2_text" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBaseline_toBaselineOf="@+id/parking2_text"
            style="@style/NameStyle" android:paddingTop="@dimen/layout_padding"
            android:paddingBottom="@dimen/layout_padding" android:textAlignment="center"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:background="#CE59D343"
            android:text="ว่าง"/>
    <TextView
            android:text="@string/car_parking_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/car_parking_text"
            android:paddingTop="@dimen/layout_padding" android:paddingBottom="@dimen/layout_padding"
            style="@style/NameStyle" android:fontFamily="@font/roboto" android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:textAlignment="center"
            android:background="#E4BDF06D"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>